@{
    ViewData["Title"] = "Dashboard";
}
<div class="text-center">
    <h1 class="display-4">Challenges</h1>
</div>
<div class="row pl-5 ml-1">
    @{var challenges = (IEnumerable<Challenge>)(ViewData["Challenges"]); }
    @if (challenges.Count() > 0)
    {
        <div class="card-deck">
            @foreach (Challenge challenge in challenges)
            {
                <div class="card mb-4" style="min-width: 20rem; max-width: 20rem;">
                    <img src="@challenge.ChallengeImage" class="card-img-top" alt="..." width="200">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-8">
                                <h5 class="card-title">@challenge.Name</h5>
                            </div>
                        </div>
                        <div class="d-block">
                            <a asp-controller="Student" asp-action="PlayGame" asp-route-id="@challenge.ChallengeId" class="btn btn-success mr-2">Play</a>
                            <a asp-controller="ChallengeHistory" asp-action="View" asp-route-id="@challenge.ChallengeId" class="btn btn-dark">View History</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center w-100">Please wait for your teacher to add the challenges.</p>
    }
</div>
